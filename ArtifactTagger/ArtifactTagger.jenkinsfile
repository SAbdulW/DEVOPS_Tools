pipeline {
    agent {
        node {
            label "Build-Slaves-B"
        }
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        disableConcurrentBuilds()
    }
    triggers {
        cron('H/15 * * * *')
    }

    stages {
        stage('Process'){
            steps{
                dir("./ArtifactTagger"){
                    bat "gradlew.bat run"
                }
            }
        }
    }
}