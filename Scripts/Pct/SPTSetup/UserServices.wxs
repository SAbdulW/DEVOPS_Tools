<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <?include UserProperties.wxi ?>
    <!-- **********************************************************-->
    <!-- Enter here all services to stop                           -->
    <!-- **********************************************************-->
    <DirectoryRef Id="IMPACT360SOFTWAREDIR">
      <Component Id="StopServices" Guid="41B3AC01-A81E-4f63-8ACC-077810935F11" KeyPath="yes">
        <ServiceControl Id="StopWDSerivise" Name="YY" Stop="both" Remove="both" Wait="yes"/>
      </Component>
      <Component Id="StartServices" Guid="42163507-A337-471c-984E-A90CFA669C54" KeyPath="yes">
        <ServiceControl Id="StartWDSerivise" Name="WatchDog" Start="both" Remove="both" Wait="yes"/>
        <Condition>START_WATCHDOG_SERVICE="true"</Condition>
      </Component>
    </DirectoryRef>


    <!-- **************************************************-->
    <!-- add additional ServicesRef if added -->
    <!-- **************************************************-->
    <ComponentGroup Id="UserServices">
      <ComponentRef Id="StopServices" />
      <ComponentRef Id="StartServices" />
    </ComponentGroup>

    <!-- **************************************************-->
    <!-- add services to the table -->
    <!-- **************************************************-->

    <CustomTable Id="VerintServices">
      <Column Id="ServiceName" PrimaryKey="yes" Type="string" Width="255" Category="Identifier" Description="Service Name" Modularize="Column" />
      <Column Id="Action" Type="string" Width="50" Category="Text" Description="Action" Modularize="Column" />
      <!--Row>
        <Data Column="ServiceName">WatchDog</Data>
        <Data Column="Action">Stop</Data>
      </Row-->
    </CustomTable>
    <!-- *******************************************************************-->
    <!--            Do No change anything beyond  this line                  -->
    <!-- *******************************************************************-->

  </Fragment>
</Wix>