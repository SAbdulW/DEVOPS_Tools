        <Data Column="CheckSuccessExitCode">true</Data>
        <Data Column="Condition">NOT Installed and SERVER_ON_INACTIVE_DC="true"</Data>
      </Row>-->
    </CustomTable>

    <!-- *******************************************************************-->
    <!--            Do No change anything beyond  this line                  -->
    <!-- *******************************************************************-->

  </Fragment>
</Wix>